# Database
POSTGRES_PASSWORD=changeme_secure_password

# MinIO Object Storage
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=changeme_minio_password

# JWT Security
JWT_SECRET=changeme_jwt_secret_min_32_characters_long

# Domain Configuration
DOMAIN=localhost
ENABLE_HTTPS=false

# ==============================================
# PORTS CONFIGURATION
# ==============================================
# These ports are exposed when NOT using the built-in nginx proxy
# If you use your own reverse proxy, map these ports accordingly

# API Service
API_PORT=8000

# Athena WebSocket Service
ATHENA_PORT=8001

# Frontend (React App)
FRONTEND_PORT=3000

# Frontend URLs (for React build)
FRONTEND_API_URL=http://localhost:8000
FRONTEND_WS_URL=ws://localhost:8001

# Built-in Nginx Proxy (only if using --profile with-proxy)
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ==============================================
# APPLICATION SETTINGS
# ==============================================
ENABLE_REGISTRATION=true
MAPBOX_TOKEN=your_mapbox_token_here

# Geocoding
NOMINATIM_PASSWORD=changeme_nominatim_password
OSM_PBF_URL=https://download.geofabrik.de/north-america/us/california-latest.osm.pbf
OSM_REPLICATION_URL=https://download.geofabrik.de/north-america/us/california-updates/

# Monitoring
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeme_grafana_password
